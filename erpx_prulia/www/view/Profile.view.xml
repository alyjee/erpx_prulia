<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"  xmlns:l="sap.ui.layout" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:uxap="sap.uxap" controllerName="com.erpx.site.prulia.PRULIA.controller.Profile"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<uxap:ObjectPageLayout id="ObjectPageLayout"
		enableLazyLoading="false"
		showTitleInHeaderContent="true"
		showFooter="{profileParam>/editPersonal}">
		<uxap:headerTitle>
			<uxap:ObjectPageHeader class="profileAvatar" id="profileObject"
								   objectImageURI="{member>profile_photo}"
								   objectTitle="{member>full_name}"
								   objectImageShape="Circle"
								   objectImageAlt="{member>full_name}"
								   isObjectIconAlwaysVisible="false"
								   isObjectTitleAlwaysVisible="false">
				<uxap:actions>
					<uxap:ObjectPageHeaderActionButton icon="sap-icon://edit" type="Emphasized" press="changeEditMode" visible="{=${profileParam>/editPersonal}!==true}"/>
				</uxap:actions>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:sections>
			<uxap:ObjectPageSection title="Personal Information" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="" >
						<uxap:blocks>
							<form:SimpleForm
								editable="{profileParam>/editPersonal}"
								labelSpanL="4" labelSpanM="4"
					  			labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  			maxContainerCols="2" layout="ResponsiveGridLayout" width="100%" singleContainerFullSize="false">
								<form:content>
									<Label text="Name"/>
									<Input liveChange="checkInput" value="{member>/full_name}" visible="{=${profileParam>/editPersonal}}"/>

									<Label text="NRIC Number"/>
									<MaskInput description="(eg: 880809-07-8888)" liveChange="checkInput" mask="CCCCCC-CC-CCCC" value="{member>/nric_number}" visible="{=${profileParam>/editPersonal}}">
										<rules>
											<MaskInputRule maskFormatSymbol="C" regex="[A-Z0-9]"/>
										</rules>
									</MaskInput>
									<Label text="NRIC Number" />
									<Text text="{member>/nric_number}" visible="{=${profileParam>/editPersonal}!==true}"/>

									<Label text="Gender"/>
									<Select selectedKey="{member>/gender}" visible="{profileParam>/editPersonal}">
										<items>
											<core:Item key="Male" text="Male" />
											<core:Item key="Female" text="Female" />
										</items>
									</Select>
									<Label text="Gender" />
									<Text text="{member>/gender}" visible="{=${profileParam>/editPersonal}!==true}"/>

									<Label text="Mobile No"/>
									<Input description="(eg: 601x xxx xxxx)" liveChange="checkInput" type="number" value="{member>/cell_number}" visible="{=${profileParam>/editPersonal}}"/>
									<Label text="Mobile No" />
									<Text text="{member>/cell_number}" visible="{=${profileParam>/editPersonal}!==true}"/>

									<Label text="Email"/>
									<Input liveChange="checkInput" type="email" value="{member>/email}" visible="{=${profileParam>/editPersonal}}"/>
									<Label text="Email" />
									<Text text="{member>/email}" visible="{=${profileParam>/editPersonal}!==true}"/>
								</form:content>
							</form:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Prudential Information" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<form:SimpleForm
								labelSpanL="4" labelSpanM="4"
					  			labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  			maxContainerCols="2" layout="ResponsiveGridLayout" width="100%" singleContainerFullSize="false">
								<form:content>
									<Label text="Agent ID (eg: 1234567)" />
									<Text text="{member>/prudential_id}" />
									<Label text="Position" />
									<Text text="{member>/position}" />
									<Label text="Branch" />
									<Text text="{member>/branch}" />
									<Label text="Region" />
									<Text text="{member>/region}" />
									<Label text="Agency Code (eg: ABC12345)" />
									<Text text="{member>/agency_no}" />
								</form:content>
							</form:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Smart Partners" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<form:SimpleForm
								labelSpanL="4" labelSpanM="4"
					  			labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  			maxContainerCols="2" layout="ResponsiveGridLayout" width="100%" singleContainerFullSize="false">
								<form:content>
									<Label text="Personal Accident" />
									<Text text="{ parts : [ 'member>/pa_status' ], formatter: '.smartPartnerStatusFormatter' }" />
									<Label text="Professional Indemnity" />
									<Text text="{ parts : [ 'member>/pi_status' ], formatter: '.smartPartnerStatusFormatter' }" />
									<Label text="Maxis" />
									<Text text="{ parts : [ 'member>/maxis_status' ], formatter: '.smartPartnerStatusFormatter' }" />
								</form:content>
							</form:SimpleForm>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
			<uxap:ObjectPageSection title="Event Perferences" titleUppercase="false">
				<uxap:subSections>
					<uxap:ObjectPageSubSection>
						<uxap:blocks>
							<VBox>
								<form:SimpleForm
									labelSpanL="4" labelSpanM="4"
						  			labelSpanS="4" emptySpanL="0" emptySpanM="0" emptySpanS="0"
						  			maxContainerCols="2" layout="ResponsiveGridLayout" width="100%" singleContainerFullSize="false"
						  			editable="{profileParam>/editPersonal}">
									<form:content>
										<Label text="Meal Option" />
										<Text text="{member>/meal_option}" visible="{=${profileParam>/editPersonal}!==true}"/>
										<Label text="Meal Option" />
										<Select selectedKey="{member>/meal_option}" visible="{profileParam>/editPersonal}">
											<items>
												<core:Item key="Non-Vegetarian" text="Non-Vegetarian" />
												<core:Item key="Vegetarian" text="Vegetarian" />
											</items>
										</Select>
										
										<Label text="Shirt Size" />
										<Text text="{member>/shirt_size}" visible="{=${profileParam>/editPersonal}!==true}"/>
										<Label text="Shirt Size" />
										<Select selectedKey="{member>/shirt_size}" visible="{profileParam>/editPersonal}">
											<items>
												<core:Item key="XS" text="Extra Small (XS)" />
												<core:Item key="S" text="Small (S)" />
												<core:Item key="M" text="Medium (M)" />
												<core:Item key="L" text="Large (L)" />
												<core:Item key="XL" text="Extra Large (XL)" />
												<core:Item key="XXL" text="Double Extra Large (XXL)" />
												<core:Item key="XXXL" text="Triple Extra Large (XXXL)" />
											</items>
										</Select>
									</form:content>
								</form:SimpleForm>
								<!--<Button text="Update" press="changeEditMode" visible="{=${profileParam>/editPersonal}!==true}"/>-->
							</VBox>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				
				<Button text="Cancel" press="changeEditMode">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
				<Button type="Emphasized" text="Update Profile" press="updateEventPref">
					<layoutData><OverflowToolbarLayoutData priority="NeverOverflow" /></layoutData>
				</Button>
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>